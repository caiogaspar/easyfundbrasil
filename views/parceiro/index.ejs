<%- include ../header.ejs %>
<script type="text/javascript" src="/javascripts/parceiros.js"></script>
<div class="container container-parceiros">
	<div class="row">
        <% if (typeof dados !== 'undefined') {%>
            <%- include menu-parceiro.ejs %>
        <% } %>
        <div class="col-sm-5 col-md-7 col-xs-7">                                
                <div class="col-xs-12 box-title">
                    <div class="col-xs-12">
                        <% if (typeof dados !== 'undefined') {%>
                            <h3>Edição de Dados</h3>
                        <% } else { %>
                            <h3>Seja um parceiro do EasyFund!</h3>
                        <% } %>
                    </div>
                </div>
                <div class="col-xs-11">  
                <% if (typeof dados === 'undefined') { %>            
                    <form action="/parceiros/create" id="parceiros-add" method="POST">      
                        <div class="col-xs-12">                
                            <div class="form-group">
                                <label for="nm_parceiro">Nome</label>
                                <input type="text" name="nm_parceiro" id="nm_parceiro" class="form-control" tabindex="1" value="<% if (typeof dados !== 'undefined') { %><%=dados.nm_parceiro %><% } %>" />                                
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                            <label for="nm_email_usuario">Email</label>
                                <input type="text" name="nm_email_usuario" id="nm_email_usuario" class="form-control" tabindex="2" value="<% if (typeof dados !== 'undefined') { %><%=dados.Usuario.nm_email_usuario %><% } %>" />                                
                            </div>
                        </div>   
                               
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="nm_senha_usuario">Senha:</label>
                                <input type="password" name="nm_senha_usuario" id="nm_senha_usuario" class="form-control" tabindex="3" />                                
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                                <label for="nm_senha_usuario_confirma">Confirmar Senha:</label>
                                <input type="password" name="nm_senha_usuario_confirma" id="nm_senha_usuario_confirma" class="form-control" tabindex="4" />
                            </div>
                        </div>        
                                                                                        
                            <div class="col-xs-12">                            
                                <input type="checkbox" name="ic_recebe_newsletter" id="ic_recebe_newsletter" checked />
                                Deseja receber nossa newsletter com novidades, promoções e atualizações do EasyFund?                
                            </div>                                 
                        <div class="col-xs-12">
                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="submit" >Criar minha conta</button>
                        </div>
                    </form>
                    <% } else { %>

                        <form action="/parceiros/editar-dados" id="edit-parceiro" method="POST">      
                            <div class="col-xs-12">                
                                <div class="form-group">
                                    <label for="nm_parceiro">Nome</label>
                                    <input type="text" name="nm_parceiro" id="nm_parceiro" class="form-control" tabindex="1" value="<% if (typeof dados !== 'undefined') { %><%=dados.nm_parceiro %><% } %>" />                                
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="form-group">
                                <label for="nm_email_usuario">Email</label>
                                    <input type="text" name="nm_email_usuario" id="nm_email_usuario" class="form-control" tabindex="2" value="<% if (typeof dados !== 'undefined') { %><%=dados.Usuario.nm_email_usuario %><% } %>" />                                
                                </div>
                            </div>   
                            <div class="col-xs-12">
                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="submit" >Salvar alterações</button>
                            </div>
                        </form>
                    <% } %>                                                
            </div>
        </div>
    </div>
</div>
<%- include ../footer.ejs %>