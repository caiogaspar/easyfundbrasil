<%- include ../header.ejs %>
<script type="text/javascript" src="/javascripts/parceiros.js"></script>
<div class="container container-parceiros">
	<div class="row">        
        <%- include menu-parceiro.ejs %>        
        <div class="col-sm-5 col-md-7 col-xs-7">                                
                <div class="col-xs-12 box-title">
                    <div class="col-xs-12">
                        <% if (typeof dados !== 'undefined') {%>
                            <h3>Edição do Produto</h3>
                        <% } else { %>
                            <h3>Cadastro de Produto</h3>
                        <% } %>
                    </div>
                </div>
                <div class="col-xs-11">                  
                    <form action="/parceiros/gravar-produto" id="parceiros-produto" method="POST">
                        <input type="hidden" name="parceiro_id" id="parceiro_id" 
                            value="<% if (typeof dados !== 'undefined') { %><%= dados.parceiro_id %> <% } else { %><%= parceiro_id %> <% } %>" />      
                        <input type="hidden" name="produto_id" id="produto_id" value="<% if (typeof produto_id !== 'undefined') { %><%= produto_id %> <% } %>" />
                        <div class="col-xs-12">                
                            <div class="form-group">
                                <label for="nm_produto">Nome</label>
                                <input type="text" name="nm_produto" id="nm_produto" class="form-control" tabindex="1" value="<% if (typeof dados !== 'undefined') { %><%=dados.nm_produto %><% } %>" />
                            </div>
                        </div>
                        <div class="col-xs-12">                
                            <div class="form-group">
                                <label for="ds_produto">Descrição</label>
                                <textarea name="ds_produto" id="ds_produto" class="form-control" tabindex="2"><% if (typeof dados !== 'undefined') { %><%=dados.ds_produto %><% } %>
                                </textarea>
                            </div>
                        </div>
                        <div class="col-xs-12">                
                            <div class="form-group">
                                <label for="vl_produto">Valor do Produto:</label>
                                <input type="text" name="vl_produto" id="vl_produto" class="vl_money form-control" tabindex="3" value="<% if (typeof dados !== 'undefined') { %><%=dados.vl_produto %><% } %>" />
                            </div>
                        </div>
                        <div class="col-xs-12">                
                            <div class="form-group">
                                <label for="pc_doacao_produto">Porcentagem Doação</label>
                                <input type="text" name="pc_doacao_produto" id="pc_doacao_produto" class="form-control" tabindex="4" value="<% if (typeof dados !== 'undefined') { %><%=dados.pc_doacao_produto %><% } %>" />
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <div class="form-group">
                            <label for="nm_link_produto">Link do Produto</label>
                                <input type="text" name="nm_link_produto" id="nm_link_produto" class="form-control" tabindex="5" value="<% if (typeof dados !== 'undefined') { %><%=dados.nm_link_produto %><% } %>" />                                
                            </div>
                        </div>   
                                                                                                                                                                                   
                        <div class="col-xs-12">
                            <button class="btn btn-primary nextBtn btn-lg pull-right" type="submit" >
                                <% if (typeof dados !== 'undefined') {%>
                                    Salvar Alterações
                                <% } else { %>
                                    Cadastrar
                                <% } %>
                            </button>
                        </div>
                    </form>                                                                
            </div>
        </div>
    </div>
</div>
<%- include ../footer.ejs %>