<%- include ../header.ejs %>
<script type="text/javascript" src="/javascripts/causas.js"></script>
<div class="container container-apoiador"> 
<div class="row">                       
    <div class="col-xs-12">        
        <% if (typeof dados !== 'undefined') {%>
            <%- include menu-causa.ejs %>
        <% } %>
        <div class="col-xs-7">   
            <div class="col-xs-12 box-title">                
                <h3>Edição de Dados</h3>                
            </div>
            <form action="/causas/edit-formas-recebimento" id="edit-forma-recebimento" method="POST">    
                <input type="hidden" name="causa_id" value="<%= dados.id %>" />
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="banco_id">Banco da Conta:</label>
                        <select name="banco_id" id="banco_id" class="form-control">
                            <option value="">Selecione um banco</option>
                            <% bancos.forEach(function(banco, index) { %>
                            <option value="<%= banco.id %>" <% if (banco.id == dados.banco_id) { %>selected <% } %> ><%= banco.nm_banco %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="cpf_cnpj_titular_conta">CPF/CNPJ do Titular da Conta:</label>
                        <input type="text" name="cpf_cnpj_titular_conta" id="cpf_cnpj_titular_conta" class="form-control" tabindex="1" value="<%= dados.cpf_cnpj_titular_conta %>" maxlength="18" />
                    </div>
                </div>                                                                
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="nr_agencia">Agência:</label>
                        <input type="text" name="nr_agencia" id="nr_agencia" class="form-control" tabindex="2" value="<%= dados.nr_agencia %>" />
                    </div>
                </div>                                        
                <div class="col-xs-6">
                    <div class="form-group">
                        <label for="nr_conta_banco">Nº da Conta:</label>
                        <input type="text" name="nr_conta_banco" id="nr_conta_banco" class="form-control" tabindex="3" value="<%= dados.nr_conta_banco %>" />                                
                    </div>
                </div>                                                                                       
                <div class="col-xs-12">
                    <button class="btn btn-primary nextBtn btn-lg pull-right" type="submit" >Salvar alterações</button>
                </div>                    
            </form>
        </div> 
    </div>                                                        
</div>
</div>
<%- include ../footer.ejs %>