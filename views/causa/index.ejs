<%- include ../header.ejs %>
<script src="/javascripts/causas.js"></script>
<script type="text/javascript">
window.onload = function() {            
            new dgCidadesEstados({
              estado: document.getElementById('sg_uf_endereco_causa'),
              cidade: document.getElementById('nm_cidade_endereco_causa')
            });
        };
</script>
<div class="container">
    <div class="col-xs-12">
        <div class="tabbable-panel">
            <div class="tabbable-line">
                <ul class="nav nav-tabs ">
                    <li class="active">
                        <a href="#tab_default_1" data-toggle="tab">
                        Dados Principais </a>
                    </li>
                    <li>
                        <a href="#tab_default_2" data-toggle="tab">
                        Detalhes da Causa</a>
                    </li>
                    <li>
                        <a href="#tab_default_3" data-toggle="tab">
                        Formas de Recebimento</a>
                    </li>
                </ul>
                <form action="/causas/create" method="POST" enctype="multipart/form-data" id="causas-add">
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_default_1">                            
                            <div class="row setup-content" id="step-1">                       
                                <div class="col-xs-8">
                                    <div class="col-xs-12 box-title">
                                        <div class="col-xs-12">
                                            <h3>Cadastre sua causa agora mesmo,<small> é simples, fácil e rápido!</small></h3>
                                        </div>
                                    </div>
                                    <div class="col-xs-11">                                 
                                        <div class="col-xs-12">                
                                            <div class="form-group">
                                                <label for="nm_causa">Nome</label>
                                                <input type="text" name="nm_causa" id="nm_causa" class="form-control" tabindex="1" />                                
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                            <label for="nm_email_usuario">Email</label>
                                                <input type="text" name="nm_email_usuario" id="nm_email_usuario" class="form-control" tabindex="2" />                                
                                            </div>
                                        </div>            
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <label for="nm_senha_usuario">Senha:</label>
                                                <input type="password" name="nm_senha_usuario" id="nm_senha_usuario" class="form-control" tabindex="3" />                                
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="form-group">
                                                <label for="nm_senha_usuario_confirma">Confirmar Senha:</label>
                                                <input type="password" name="nm_senha_usuario_confirma" id="nm_senha_usuario_confirma" class="form-control" tabindex="4" />
                                            </div>
                                        </div>        
                                        <div class="col-xs-12">                            
                                            <input type="checkbox" name="ic_recebe_newsletter" id="ic_recebe_newsletter" checked />
                                            Deseja receber nossa newsletter com novidades, promoções e atualizações do EasyFund?                
                                        </div>    
                                        <div class="col-xs-12">
                                            <a href="javascript:void(0)" class="btn btn-primary nextBtn btn-lg pull-right">Continuar</a>
                                        </div>                                            
                                    </div> 
                                </div>                                                        
                            </div>
                        </div>                                                        
                        <div class="tab-pane" id="tab_default_2">
                            <div class="row setup-content" id="step-1">
                                <div class="col-xs-8">
                                    <div class="col-xs-12 box-title">
                                        <div class="col-xs-12">
                                            <h3>Detalhes da Causa - Passo 2 de 3</h3>
                                        </div>
                                    </div>
                                    <div class="col-xs-11">
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label class="cd_categoria_causa">Selecione a categoria da sua causa:</label>
                                                    <select name="categoria_causa_id" id="categoria_causa_id" class="form-control">
                                                        <option value="">Selecione uma categoria</option>                                               
                                                        <% page_data.categorias.forEach(function(categoria, index) { %>
                                                        <option value="<%= categoria.id %>"><%= categoria.nm_categoria_causa %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>  
                                            </div> 
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="qt_apoiadores_causa">Selecione a quantidade de pessoas que apoiam a sua causa:</label>
                                                    <select name='qt_apoiadores_causa' id="qt_apoiadores_causa" class="form-control">
                                                        <option value="Menos que 100">Menos que 100</option>
                                                        <option value="De 100 à 200">De 100 à 200</option>
                                                        <option value="De 200 à 500">De 200 à 500</option>
                                                        <option value="De 500 à 1000">De 500  à 1000</option>
                                                        <option value="De 1000 à 5000">De 1000 à 5000</option>
                                                        <option value="Mais de 5000">Mais de 500</option>
                                                    </select>
                                                </div>             
                                            </div>
                                        </div>      
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">
                                                <div class="form-group">
                                                    <label for="ds_causa">Descrição da causa:</label>
                                                    <textarea name="ds_causa" id="ds_causa" class="form-control">
                                                    </textarea>
                                                </div>                
                                            </div>    
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">
                                                <div class="form-group">
                                                    <label for="nm_site_causa">Site:</label>
                                                    <input type="text" name="nm_site_causa" id="nm_site_causa" class="form-control" />
                                                </div>                
                                            </div>    
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">      
                                                <div class="col-xs-3" align="center"> <img alt="User Pic" src="http://goodbuylist.com/images/NoPhoto_user.png" class="img-circle profile-photo" /> </div>
                                                <div class="col-xs-9">
                                                    <div class="form-group">
                                                        <label for="nm_logo_causa">Logo:</label>
                                                        <input type="file" name="nm_logo_causa" id="nm_logo_causa" class="form-control" />
                                                    </div>                
                                                </div>                    
                                            </div>   
                                        </div>                                        
                                        <div class="col-xs-12">                                         
                                            <div class="col-xs-12">
                                                <div class="form-group">
                                                    <label for="cd_cep_causa" class="label-cep">CEP:</label>
                                                    <input type="text" name="cd_cep_causa" id="cd_cep_causa" class="cep" maxlength="10" class="form-control" />
                                                </div>                
                                            </div>       
                                        </div>                         
                                        <div class="col-xs-12">
                                            <div class="col-xs-9">
                                                <div class="form-group">
                                                    <label for="nm_endereco_causa">Endereço:</label>
                                                    <input type="text" name="nm_endereco_causa" id="nm_endereco_causa" class="form-control" />
                                                </div>                
                                            </div>
                                            <div class="col-xs-3">        
                                                <div class="form-group">
                                                    <label for="nr_endereco_causa">Nº:</label>
                                                    <input type="text" name="nr_endereco_causa" id="nr_endereco_causa" class="form-control" />
                                                </div>                
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="ds_complemento_endereco_causa">Complemento:</label>
                                                    <input type="text" name="ds_complemento_endereco_causa" id="ds_complemento_endereco_causa" class="form-control" />
                                                </div>                
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="nm_bairro_endereco_causa">Bairro</label>
                                                    <input type="text" name="nm_bairro_endereco_causa" class="form-control" id="nm_bairro_endereco_causa" />
                                                </div>                
                                            </div>
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                <label for="sg_uf_endereco_causa">Estado:</label>
                                                    <select name="sg_uf_endereco_causa" id="sg_uf_endereco_causa" class="form-control"></select>
                                                </div>                
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="nm_cidade_endereco_causa">Cidade:</label>
                                                    <select name="nm_cidade_endereco_causa" id="nm_cidade_endereco_causa" class="form-control">
                                                    </select>
                                                </div>                
                                            </div>
                                        </div>        
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">
                                                <a href="javascript:void(0)" class="btn btn-primary nextBtn btn-lg pull-right">Continuar</a>
                                            </div>
                                        </div>                                            
                                    </div>
                                </div>                                                                
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_default_3">
                            <div class="row setup-content" id="step-1">
                                <div class="col-xs-8">
                                    <div class="col-xs-12 box-title">
                                        <div class="col-xs-12">
                                            <h3>Dados para Pagamento - Passo 3 de 3</h3>
                                        </div>
                                    </div>
                                    <div class="col-xs-11">                                 
                                        <div class="col-xs-12">   
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="banco_id">Banco da Conta:</label>
                                                    <select name="banco_id" id="banco_id" class="form-control">
                                                        <option value="">Selecione um banco</option>
                                                        <% page_data.bancos.forEach(function(banco, index) { %>
                                                        <option value="<%= banco.id %>"><%= banco.nm_banco %></option>
                                                        <% }); %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="cpf_cnpj_titular_conta">CPF/CNPJ do Titular da Conta:</label>
                                                    <input type="text" name="cpf_cnpj_titular_conta" id="cpf_cnpj_titular_conta" class="form-control" tabindex="1" />
                                                </div>
                                            </div>                                                
                                        </div>
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="nr_agencia">Agência:</label>
                                                    <input type="text" name="nr_agencia" id="nr_agencia" class="form-control" tabindex="2" />
                                                </div>
                                            </div>                                        
                                            <div class="col-xs-6">
                                                <div class="form-group">
                                                    <label for="nr_conta_banco">Nº da Conta:</label>
                                                    <input type="text" name="nr_conta_banco" id="nr_conta_banco" class="form-control" tabindex="3" />                                
                                                </div>
                                            </div>
                                        </div>                                              
                                        <div class="col-xs-12">
                                            <div class="col-xs-12">
                                                <button class="btn btn-primary nextBtn btn-lg pull-right" type="submit" >Registrar</button>
                                            </div>
                                        </div>                                            
                                    </div> 
                                </div>
                            </div>
                        </div>                        
                    </div>                
                </form>        
            </div>    
        </div>     
    </div>                                
</div>
<%- include ../footer.ejs %>